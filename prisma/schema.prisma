generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  email       String        @unique
  password    String      
  departamento String
  curso       String
  photo       Bytes
  avaliacao   Avaliacao[] //cada user pode fazer muitas avalia√ßoes - um para muitos
  comentarios Comentario[] //cada user pode fazer muitos comentarios - um para muitos
}

model Avaliacao {
  id           Int           @id @default(autoincrement())
  content      String
  published    Boolean       @default(false)
  authorId     Int
  disciplinaId Int
  professorId  Int
  comentarios  Comentario[]
  author       User          @relation(fields: [authorId], references: [id]) //uma avaliacao so pode ter um autor, referencia a chave estrangeira authorId
  disciplina   Disciplina    @relation(fields: [disciplinaId], references: [id]) //cada avaliacao pertence a uma unica disciplina 
  professor    Professor     @relation(fields: [professorId], references: [id]) //cada avaliacao e sobre um unico professor
}

model Comentario {
  id           Int           @id @default(autoincrement())
  content      String
  published    Boolean       @default(false)
  authorId     Int
  avaliacaoId  Int
  author       User          @relation(fields: [authorId], references: [id]) //cada comentario pertence a um unico usuario
  avaliacao    Avaliacao     @relation(fields: [avaliacaoId], references: [id]) //cada comentario pertence a uma unica avaliacao
}

model Disciplina {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  avaliacoes  Avaliacao[] //uma disciplina pode ter muitas avaliacoes
  professores Professor[] //uma disciplina pode ter muitos professores
}

model Professor {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  departamento String
  disciplinas  Disciplina[] //cada professor pode possuir varias disciplinas
  avaliacoes   Avaliacao[] //cada professor pode ter muitas avaliacoes
}
